<h1>Products</h1>


<p class="addproduct">
<%if current_user %>
  <%= link_to "Add a Product", new_product_path %>
<% end %>
</p>

<!--Product List -->
<table class="table table-hover">
<tr>
	<td> Pictures </td>
	<td> Name </td>
	<td> Description </td>
	<td> Prices </td>
	<td></td>
	<td></td>
	<td>

</tr>
<% @products.each do |product| %>
<tr>
	<td class="thumbnail"> <%= link_to image_tag(product.url), "products/#{product.id}" %> </td>
  	<td> <%= product.name %> </td>
  	<td> <%= product.description %> </td>
  	<td> <%= product.formatted_price %> </td>
  	<td> <%= link_to "Show", product_path(product) %> </td>
  	<td> <%= link_to "Edit", edit_product_path(product) %> </td>
  	<td> <%= link_to "Delete", product, method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %></td> 
</tr>
<% end %>

</table>


<!--Show if user is logged in or out-->
<p class="userinfo">
	<% if current_user %>
		Signed in as <%= current_user.name %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
	<% else %>
		<%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
	<% end %>
</p>
