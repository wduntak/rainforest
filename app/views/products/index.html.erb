<h1>Products</h1>

<table>
<tr>
	<td> Pictures </td>
	<td> Name </td>
	<td> Description </td>
	<td> Prices </td>
</tr>
<% @products.each do |product| %>
<tr>
	<td> <%= link_to image_tag(product.url), "products/#{product.id}" %> </td>
  	<td> <%= product.name %> </td>
  	<td> <%= product.description %> </td>
  	<td> <%= product.formatted_price %> </td>
</tr>
<% end %>

</table>