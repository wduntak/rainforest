<h1>Products</h1>


<p class="addproduct">
<%if current_user %>
  <%= link_to "Add a Product", new_product_path %>
<% end %>
</p>

<!--Search Form-->
<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search" %>
<% end %>

<div id="container">
	<!--Product List -->
	<table class="table table-hover">
		<thead>
			<tr>
				<td> Pictures </td>
				<td> Name </td>
				<td> Description </td>
				<td> Prices </td>
				<td></td>
				<td></td>
				<td>
			</tr>
		</thead>
		<tbody id='products'>
			<%= render @products %>
		</tbody>

	</table>
</div>



<!--Show if user is logged in or out-->
<p class="userinfo">
	<% if current_user %>
		Signed in as <%= current_user.name %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
	<% else %>
		<%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
	<% end %>
</p>
