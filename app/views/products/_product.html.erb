<tr>
	<td class="thumbnail"> <%= link_to image_tag(product.url), "products/#{product.id}" %> </td>
  	<td> <%= product.name %> </td>
  	<td> <%= truncate(product.description, length: 100) %> </td>
  	<td> <%= product.formatted_price %> </td>
  	<td> <%= link_to "Show", product_path(product) %> </td>
  	<td> <%= link_to "Edit", edit_product_path(product) %> </td>
  	<td> <%= link_to "Delete", product, method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %></td> 
</tr>